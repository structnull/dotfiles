# Keybinds

# Terminal 
super + Return
    kitty	

# Lock
super + l
    xsecurelock

# Rofi App Launcher
super + space
	sh $HOME/.config/rofi/launchers/type-3/launcher.sh 

# Switch windows
alt + Tab
    bash ~/.config/rofi/window-switcher/window-switcher.sh

# Launch Apps
super + f
	firefox
super + e
    nautilus	

# Close App
alt + {_,shift + }q
	bspc node -c

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# kill window
ctrl + alt + Escape
       xkill

#gnome-system-monitor
ctrl + shift + Escape
    gnome-system-monitor

# Quit/Restart bspwm
ctrl + super + {q,r}
	bspc {quit,wm -r}
	
# Fullscreen or Monocle
super + F11
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
alt + s
    bspc node -t "~"{floating,tiled}

alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Send focused window to another workspace
alt + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}' --follow

# focus the node in the given direction
alt + {h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node in the given direction
alt + {Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# expand/contract a window 
alt + control + {h,j,k,l}
  bspc node -z {left -20 0 || bspc node -z right -20 0, \
                bottom 0 20 || bspc node -z top 0 20,\
                top 0 -20 || bspc node -z bottom 0 -20,\
                right 20 0 || bspc node -z left 20 0}


# expand/contract a window 
alt + control + {Left,Down,Up,Right}
  bspc node -z {left -20 0 || bspc node -z right -20 0, \
                bottom 0 20 || bspc node -z top 0 20,\
                top 0 -20 || bspc node -z bottom 0 -20,\
                right 20 0 || bspc node -z left 20 0}a

super + alt + p
	bspc config focus_follows_pointer {true,false}

# media
XF86AudioRaiseVolume
	pactl -- set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
	pactl -- set-sink-volume @DEFAULT_SINK@ -5%
alt + {Num_Lock,KP_Add}
	pactl -- set-sink-volume @DEFAULT_SINK@ +5%
alt + {Num_Lock,KP_Subtract}
	pactl -- set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioRaiseVolume
	pactl -- set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
	pactl -- set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
	pactl -- set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioNext
	playerctl --all-players next
alt +{Num_Lock,KP_Right}
	playerctl --all-players next
XF86AudioPrev
	playerctl --all-players previous
alt +{Num_Lock,KP_Left}
	playerctl --all-players previous
alt +{Num_Lock,KP_Begin}
	playerctl --all-players play-pause
XF86AudioPlay
	playerctl --all-players play-pause
XF86AudioStop
	playerctl --all-players stop

#screenshot
alt + shift + s
    maim -s --format=png /dev/stdout | xclip -selection clipboard -t image/png -i

# brightness
XF86MonBrightnessUp
	~/.scripts/brightness_ctl.sh up
XF86MonBrightnessDown
	~/.scripts/brightness_ctl.sh down
